<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Agenda Contacto</title>
    <script src="https://unpkg.com/axios@1.1.2/dist/axios.min.js"></script>
  </head>
  <body>
    <header>
      <h1>Agenda Contacto</h1>
    </header>
    <div class="container">
      <form id="form-agenda">
        <input type="text" placeholder="Ingresa nombre" id="nombre" />
        <input type="text" placeholder="Ingresa numero" id="numero" />
        <input type="button" value="Enviar" id="btn_agregar" />
      </form>
    </div>
    <div>
      <ul>
        <% contacts.forEach((contact)=> { %>
        <li>
          <span><%= contact.id_agenda %></span>
          | <span><%= contact.nombre_contacto %></span>
          | <span><%= contact.numero_contacto %></span>
        </li>
        <% }) %>
      </ul>
    </div>
    <script src="funciones.js" type="module"></script>
  </body>
</html>
